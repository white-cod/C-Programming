<Window x:Class="SneakersParserWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SneakersParserWPF"
        mc:Ignorable="d"
        Title="HTML Parser" Height="650" Width="600" ResizeMode="NoResize">
    <Grid>

        <Label Content="Enter URL:" Margin="20,0,0,570" VerticalAlignment="Bottom" Height="25" HorizontalAlignment="Left" Width="64"/>
        <TextBox x:Name="urlTextBox" Margin="90,0,0,570" Width="300" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom"/>

        <Button Content="Parse HTML" Grid.Row="0" Margin="394,0,0,570" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="ParseHTML_Click"/>

        <Label Content="Result:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,530"/>
        <TextBox x:Name="resultTextBox" Margin="90,0,0,20" Width="405" Height="528" HorizontalAlignment="Left" VerticalAlignment="Bottom" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"/>
    </Grid>
</Window>
