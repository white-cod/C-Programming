<Window x:Class="KeyboardTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyboard Trainer" Height="450" Width="800">
    <Grid>
        <Label Content="Difficulty"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="10,10,0,0"/>

        <Slider x:Name="DifficultySlider"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="80,15,0,0"
                Width="100"
                Minimum="1" 
                Maximum="3"
                TickFrequency="1"
                IsSnapToTickEnabled="True"/>

        <Label x:Name="DifficultyInfo" 
               FontWeight="SemiBold"
               Content="Easy"
               Foreground="Green"
               Margin="180,10,0,0"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"/>

        <Button x:Name="StartButton"
                Width="100"
                Height="20"
                Content="Start training"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="291,15,0,0"
                Click="StartButton_Click"/>

        <Button x:Name="StopButton"
                Width="100"
                Height="20"
                Content="Stop training"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="410,15,0,0"
                Click="StopButton_Click"
                IsEnabled="False"/>

        <TextBox x:Name="InputLogBox"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center"
                 Width="550"
                 Height="20"
                 Margin="0,45,0,0"
                 IsReadOnly="True"
                 Focusable="True"/>


        <Label x:Name="AccuracyInfo"
                Width="150"
                Height="30"
                Content="Accuracy:"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Margin="0,10,20,0"/>

        <Button x:Name="ButtonZ" Content="Z" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="211,301,0,0"/>
        <Button x:Name="ButtonX" Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="266,301,0,0"/>
        <Button x:Name="ButtonC" Content="C" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="321,301,0,0"/>
        <Button x:Name="ButtonV" Content="V" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="376,301,0,0"/>
        <Button x:Name="ButtonB" Content="B" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="431,301,0,0"/>
        <Button x:Name="ButtonN" Content="N" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="485,301,0,0"/>
        <Button x:Name="ButtonM" Content="M" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="540,301,0,0"/>
        <Button x:Name="ButtonSpace" Content="Space" HorizontalAlignment="Center" VerticalAlignment="Top" Width="270" Height="50" IsEnabled="False" Click="Button_Click" Margin="0,361,0,0"/>

