<Window x:Class="AutoloaderCustomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoloaderCustomizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="programListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="765" Height="270" Margin="10,10,0,0"/>
        <Button Content="Добавить программу" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="10,290,0,0" Click="AddProgram_Click"/>
        <Button Content="Удалить программу" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="140,290,0,0" Click="RemoveProgram_Click"/>
    </Grid>
</Window>
