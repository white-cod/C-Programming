<Window x:Class="TCP_screenshotServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCP_screenshotServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="900">
    <StackPanel Margin="10">

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Show Path" Click="BrowseButton_Click" Margin="5"/>
            <TextBox x:Name="SaveLocationTextBox" Width="300" Margin="5"/>
        </StackPanel>

        <Button Content="Start Listening" Click="StartListeningButton_Click" HorizontalAlignment="Left" Margin="0,0,0,10"/>
        <TextBlock x:Name="StatusTextBlock" Margin="0,0,0,10"/>

        <Image x:Name="ImageControl" Stretch="Uniform" Margin="0,0,0,10"/>

    </StackPanel>
</Window>
