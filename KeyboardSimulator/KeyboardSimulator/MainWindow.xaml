<Window x:Class="KeyboardSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Label Content="Сложность" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Slider x:Name="DifficultySlider" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="85,17,0,0" Minimum="1" Maximum="5" TickFrequency="1" Value="1" Height="23"/>
        <Button Content="Start Training" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="251,13,0,0" Click="StartTraining_Click"/>
        <Canvas x:Name="KeyboardCanvas" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,10,10" Width="560" Height="300"/>
        <Button x:Name="KeyboardButton" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50" Height="50" IsEnabled="False" Click="Button_Click" Margin="0,160,0,0"/>
    </Grid>
</Window>
